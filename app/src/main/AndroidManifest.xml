<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stizsoftware.oestoque">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/login"
        android:label="@string/app_name"
        android:roundIcon="@drawable/login"
        android:supportsRtl="true"
        android:theme="@style/Theme.OEstoque"
        android:hardwareAccelerated="true">
        <activity android:name=".activity.TelaLogin" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Pedido" android:screenOrientation="portrait"/>
        <activity android:name=".activity.Contagem" android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.Modulos" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.Escanear"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"/>
    </application>

</manifest>